<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="setting_menu_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#515151</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="settimg_menu_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/person_next_icon</item>
        <item name="android:textSize">25dp</item>

    </style>

    <style name="search_popSearch">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/border_search_empty</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="search_choice">
        <item name="android:textColor">@color/kurly</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/border_search_purple</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="search_number">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/kurly</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="search_text">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>