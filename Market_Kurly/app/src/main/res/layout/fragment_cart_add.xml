<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartAddFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/cartAdd_pic"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pop_01" />

        <TextView
            android:id="@+id/cartAdd_name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cartAdd_pic"
            android:text="[홍대쭈꾸미] 쭈꾸미 볶음 300g(냉동)\n[홍대쭈꾸미] 쭈꾸미 볶음 300g(냉동)"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_toRightOf="@id/cartAdd_pic"
            android:layout_below="@+id/cartAdd_name"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/cartAdd_realPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000원"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"/>


            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/cartAdd_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000원"
                android:textStyle="bold"
                android:textSize="12dp"/>

        </LinearLayout>


    </RelativeLayout>
    <Button
        android:id="@+id/btn_addCart"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="장바구니 담기"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/kurly"/>



</LinearLayout>