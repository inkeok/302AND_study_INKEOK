<?xml version="1.0" encoding="utf-8"?>
<resources>
   <!-- style == css 미리 어떤 크기나 색상 등을 만들어 놓고 사용하는 기법
   web태그 모양을 버튼처럼 만들어 놓고 클래스 로딩을 이용해서 재활용-->
    <dimen name="cih_tv_width">120dp</dimen>
    <dimen name="cih_tv_height">80dp</dimen>

    <color name="cih_tv_color">#EA5222</color>
    <!--위젯을 한번에 적용 가능한 style태그 이용해보기 넓이 높이 색상을 미리 하나의 name으로 묶어서 사용하는 기법-->
    <style name="cih_tv_style">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#DFD968</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="cih_tv_style2">
        <item name="android:textSize">20dp</item>

    </style>
</resources>